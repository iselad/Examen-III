@page "/Usuarios"


<strong><em><font face=”Times New Roman”><center><h1 style="color:blue;">Lista de Usuario</h1></center></font></em></strong>
<div class="card-header"></div>
<br />
<style>
    tr:nth-child(even) {
        background-color: #00FFFF;
    }
</style>
@if (usuariosLista == null)
{
    <div class="spinner"></div>
}
else
{
    <table class="table">
         <thead style="color:fuchsia;">
            <tr>
                <th>Código</th>
                <th>Nombre</th>
                <th>Rol</th>
                <th>Esta Activo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in usuariosLista)
            {
                <tr>
                    <td>@user.Codigo</td>
                    <td>@user.Nombre</td>
                    <td>@user.Rol</td>
                    <td>
                        @if(@user.EstaActivo)
                        {
                            <span class="oi oi-circle-check" style="color:green;"></span>
                        }
                        else
                        {
                            <span class="oi oi-circle-x" style="color:red;"></span>
                        }
                    </td>
                    

                </tr>
            }
        </tbody>
    </table>
}




